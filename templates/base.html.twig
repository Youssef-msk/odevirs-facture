<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        <link rel="shortcut icon" href="{{ asset('assets/images/favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/backend-plugin.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/backend.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/dd.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/js/magicsuggest.css') }}">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/css/select2.min.css" rel="stylesheet"/>
    {% endblock %}

    <style>
        #loading-center{
            background:url({{ asset('assets/images/crm/loader/loader.gif') }}) no-repeat scroll 50%;
            background-size:5%;width:100%;height:100%;
            position:relative
        }
        .hidden{
            display: none;
        }

        .select2-selection__rendered {
            line-height: 41px !important;
        }
        .select2-container .select2-selection--single {
            height: 45px !important;
        }
        .select2-selection__arrow {
            height: 34px !important;
        }
    </style>
</head>
<body class="">
{% include '_partial/loader.html.twig' %}

<div class="wrapper">
    {% include '_partial/side_menu.html.twig' %}
    {% include '_partial/top_navbar.html.twig' %}
    {% block body %}

    {% endblock %}
</div>

{% include '_partial/footer.html.twig' %}

<script src="{{ asset('assets/js/backend-bundle.min.js') }}"></script>
<script src="{{ asset('assets/js/customizer.js') }}"></script>
<script src="{{ asset('assets/js/sidebar.js') }}"></script>
<script src="{{ asset('assets/js/flex-tree.min.js') }}"></script>
<script src="{{ asset('assets/js/tree.js') }}"></script>
