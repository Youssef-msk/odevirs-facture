<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Authentification</title>

    <link rel="shortcut icon" href="{{ asset('assets/images/favicon.ico') }}" />
    <link rel="stylesheet" href="{{ asset('assets/css/backend-plugin.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/backend.css') }}">

    <style>
        #loading-center{
            background:url({{ asset('assets/images/crm/loader/loader.gif') }}) no-repeat scroll 50%;
            background-size:5%;width:100%;height:100%;
            position:relative
        }
    </style>
</head>
<body class=" " style="background: #0c2556">
<!-- loader Start -->
<div id="loading">
    <div id="loading-center">
    </div>
</div>

<div class="wrapper">
    <section class="login-content">
        <div class="container h-100">
            <div class="row align-items-center justify-content-center h-100">
                <div class="col-md-5">
                    <div class="card p-3">
                        <div class="card-body">
                            <div class="auth-logo">
                                <img src="{{ asset('assets/images/crm/logo/logo_main_new.png') }}" class="img-fluid rounded-normal light-logo" alt="logo" style="height: 254px;">
                            </div>
                            <h3 class="mb-3 font-weight-bold text-center">Authentification</h3>
                            {% if error %}
                                    <p class="text-center text-secondary mb-4">
                                        <div class="alert text-white bg-danger" role="alert">
                                            <div class="iq-alert-icon">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
                                                </svg>

                                            </div>
                                            <div class="iq-alert-text">
                                                La connexion a échouée, merci de réessayer
                                            </div>
                                        </div>
                                    </p>
                            {% else %}
                                    <p class="text-center text-secondary mb-4">
                                        Connectez-vous à votre compte pour continuer
                                    </p>
                            {% endif %}
                            <div class="mb-5">
                            </div>
                            <form method="post">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="text-secondary">Identifiant :</label>
                                            <input class="form-control" type="text" name="username" value="{{ last_username }}" placeholder="Entrer votre identifiant" required autofocus>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 mt-2">
                                        <div class="form-group">
                                            <label class="text-secondary">Mot de passe :</label>
                                            <input class="form-control" name="password" type="password" placeholder="Entrer votre mot de passe" required>
                                        </div>
                                    </div>
                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >
                                </div>

                                <button type="submit" class="btn btn-primary btn-block mt-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                                    </svg>
                                    Se connecter
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

