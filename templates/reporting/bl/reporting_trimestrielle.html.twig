        $(document).ready(function(){
            $('.submitFilterButton').on('click',function(){
                $('.submitFilterForm').submit();
            });

            $('.yearPicker').datepicker({
                format: "yyyy", // Show only the year
                viewMode: "years", // Display the picker in years view
                minViewMode: "years" // Set the minimum view to years
            });
        });

    </script>
